{# Here are defined blocks for editorial interface #}
{# Will basically override normal "view" blocks, injecting some metadata in them #}

{% block ezstring_field_edit %}
{% spaceless %}
    <span {{ block( 'field_edit_attributes' ) }}>{{ block( 'ezstring_field' ) }}</span>
{% endspaceless %}
{% endblock %}

{% block eztext_field_edit %}
{% spaceless %}
    {% set attr = block( 'field_edit_attributes' ) %}
    {{ block( 'eztext_field' ) }}
{% endspaceless %}
{% endblock %}

{# Defines data attributes to be rendered in edit mode #}
{% block field_edit_attributes %}
data-test="foobar"
{% endblock %}
